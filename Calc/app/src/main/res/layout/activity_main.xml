<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:background="#000207"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtCalculo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f1f1f1"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDesligar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#020101"
            android:onClick="off"
            android:text="OFF"
            android:textColor="#f1f1f1"
            android:textSize="40dp"  />

        <Button
            android:id="@+id/btLimpar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:onClick="limpar"
            android:text="C"
            android:textSize="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt7"
            android:text="7"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt8"
            android:text="8"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt9"
            android:text="9"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/btDividir"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:onClick="dividir"
            android:text="/"
            android:textSize="40dp"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt4"
            android:text="4"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt5"
            android:text="5"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt6"
            android:text="6"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/btMultiplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:onClick="multiplicar"
            android:text="*"
            android:textSize="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt1"
            android:text="1"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt2"
            android:text="2"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bt3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt3"
            android:text="3"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/btSubtrair"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:onClick="subtrair"
            android:text="-"
            android:textSize="40dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt0"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#838282"
            android:onClick="bt0"
            android:text="0"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btPonto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:onClick="btPonto"
            android:text="."
            android:textSize="40dp" />

        <Button
            android:id="@+id/btSomar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:onClick="somar"
            android:text="+"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btIgual"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:onClick="igual"
            android:text="="
            android:textSize="40dp"
            />

    </LinearLayout>
</LinearLayout>
